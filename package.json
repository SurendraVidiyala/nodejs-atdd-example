{
  "name": "nodejs-atdd-example",
  "version": "0.0.1",
  "description": "ATDD Example",
  "main": "bin/server",
  "scripts": {
    "start": "node ./bin/server",
    "lint": "eslint src test*",
    "pretest": "npm run lint",
    "test": "npm run test-unit && npm run test-integration && npm run test-acceptance && npm run coverage",
    "test-unit": "mocha --recursive tests/unit",
    "test-integration": "mocha --recursive tests/integration",
    "test-acceptance": "cucumber.js tests/acceptance/features -r tests/acceptance/step_definitions",
    "coverage-mocha": "istanbul cover  --lcovonly --dir ./coverage/mocha _mocha -- --recursive tests/unit  --reporter mocha-lcov-reporter",
    "coverage-acceptance": "istanbul cover  --lcovonly --dir ./coverage/acceptance cucumber.js -- --tags ~@ignore --format json tests/acceptance/features -r tests/acceptance/step_definitions > /dev/null",
    "coverage-merge": "lcov-result-merger coverage/{mocha,acceptance}/lcov.info coverage/lcov.info",
    "coverage": "npm run coverage-mocha && npm run coverage-acceptance && npm run coverage-merge",
    "coveralls": "istanbul-coveralls"
  },
  "pre-commit": [
    "test"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/IGZangelsanchez/nodejs-atdd-example.git"
  },
  "keywords": [
    "nodejs",
    "api",
    "template"
  ],
  "contributors": [
    {
      "name": "Angel Sanchez",
      "url": "http://github.com/angelsanchez/"
    },
    {
      "name": "Gustavo Marin",
      "url": "http://github.com/guumaster/"
    }
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/IGZangelsanchez/nodejs-atdd-example/issues"
  },
  "homepage": "https://github.com/IGZangelsanchez/nodejs-atdd-example",
  "dependencies": {
    "http-status-codes": "^1.0.6",
    "mongodb": "^2.1.7",
    "restify": "^4.0.4",
    "tv4": "^1.2.7",
    "winston": "^2.1.1"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "coveralls": "2.11.6",
    "cucumber": "0.6.0",
    "dirty-chai": "^1.2.2",
    "eslint": "^2.2.0",
    "istanbul": "0.4.2",
    "istanbul-coveralls": "1.0.3",
    "lcov-result-merger": "^1.0.2",
    "mocha": "^2.4.5",
    "mocha-lcov-reporter": "^1.1.0",
    "mockery": "1.4.0",
    "pre-commit": "^1.1.2",
    "request-promise": "^2.0.1",
    "sinon": "^1.17.3"
  },
  "engines": {
    "node": ">= 4.3"
  }
}
